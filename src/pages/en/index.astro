---
import Layout from "@/layouts/Layout.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { Icon } from "astro-icon/components";
import en from "@/i18n/en.json";

const t = en;
const projects = ["glass-ui", "html-to-image", "pixie", "documind"];
---

<Layout lang="en" title="Juan Téllez | jntellez.dev">
  <header class="mt-20 flex justify-between items-center">
    <h1 class="text-3xl font-serif font-bold italic">Juan Téllez</h1>
    <div class="flex gap-2">
      <a
        href="https://linkedin.com/in/jntellez"
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="LinkedIn"
        title="LinkedIn"
      >
        <Icon name="simple-icons:linkedin" size={20} />
      </a>
      <a
        href="https://github.com/jntellez"
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="GitHub"
        title="GitHub"
      >
        <Icon name="simple-icons:github" size={20} />
      </a>
      <a
        href="/"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="Switch to Spanish"
        title={t["nav.lang"]}
      >
        <Icon name="lucide:globe" size={20} />
      </a>
      <ThemeToggle />
    </div>
  </header>

  <main class="space-y-16 mt-10">
    <section class="space-y-4">
      <p class="text-lg md:text-base leading-7">
        {t["hero.title"]}
      </p>
    </section>

    <section>
      <h3
        class="text-3xl font-serif border-b border-black dark:border-white mb-6 pb-2"
      >
        {t["projects.title"]}
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          projects.map((project) => (
            <article class="border border-black dark:border-white p-6 flex flex-col justify-between hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors group cursor-pointer">
              <h4 class=" text-2xl font-bold">{project}</h4>
              <p
                class="mt-4 font-sans opacity-0 group-hover:opacity-100 transition-opacity"
                set:html={t["projects.view"]}
              />
            </article>
          ))
        }
      </div>
    </section>

    <section>
      <h3 class="text-3xl font-serif mb-4">
        {t["stack.title"]}
      </h3>
      <p class="font-sans text-lg">
        {t["stack.items"]}
      </p>
    </section>
  </main>
</Layout>
