---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import es from "../i18n/es.json";

const t = es;
const projects = ["glass-ui", "html-to-image", "pixie", "documind"];
---

<Layout lang="es" title="Juan Téllez | jntellez.dev">
  <header class="mt-20 flex justify-between items-center">
    <h1 class="text-3xl font-serif font-bold italic">Juan Téllez</h1>
    <div class="flex gap-4">
      <a
        href="/en/"
        class="border border-black dark:border-white px-4 py-2 hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
      >
        {t["nav.lang"]}
      </a>
      <ThemeToggle />
    </div>
  </header>

  <main class="space-y-16 mt-10">
    <section class="space-y-4">
      <p class="text-lg md:text-base leading-7">
        {t["hero.title"]}
      </p>
    </section>

    <section>
      <h3
        class="text-3xl font-serif border-b border-black dark:border-white mb-6 pb-2"
      >
        {t["projects.title"]}
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          projects.map((project) => (
            <article class="border border-black dark:border-white p-6 flex flex-col justify-between hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors group cursor-pointer">
              <h4 class=" text-2xl font-bold">{project}</h4>
              <p class="mt-4 font-sans opacity-0 group-hover:opacity-100 transition-opacity">
                Ver proyecto &rarr;
              </p>
            </article>
          ))
        }
      </div>
    </section>

    <section>
      <h3 class="text-3xl font-serif mb-4">
        {t["stack.title"]}
      </h3>
      <p class="font-sans text-lg">
        {t["stack.items"]}
      </p>
    </section>
  </main>
</Layout>
