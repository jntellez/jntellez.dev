---
import Layout from "@/layouts/Layout.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { Icon } from "astro-icon/components";
import es from "@/i18n/es.json";

const t = es;
const projects = [
  {
    name: "glass-ui",
    description:
      "Sistema de diseño moderno y personalizable basado en glassmorphism.",
    url: "https://ui-glass.vercel.app",
    tecnologies: "Turborepo, React, Astro, Tailwind CSS.",
  },
  {
    name: "html-to-image",
    description:
      "Playground interactivo para convertir código HTML/CSS en imágenes.",
    url: "https://htmltoimage3.vercel.app",
    tecnologies: "React, Vite, shadcn/ui.",
  },
  {
    name: "pixie",
    description:
      "Un acortador de enlaces moderno, rápido y enfocado en la experiencia de usuario.",
    url: "https://pixie-link.vercel.app",
    tecnologies: "Next.js, Prisma, PostgreSQL.",
  },
  {
    name: "documind",
    description:
      "App móvil de productividad que organiza y simplifica contenido web y documentos.",
    url: "https://github.com/jntellez/documind",
    tecnologies: "React Native, Expo, Hono.",
  },
];
---

<Layout lang="es" title="Juan Téllez | jntellez.dev">
  <header class="mt-20 flex justify-between items-center">
    <h1 class="text-3xl font-serif font-bold italic">Juan Téllez</h1>
    <div class="flex gap-2">
      <a
        href="https://linkedin.com/in/jntellez"
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="LinkedIn"
        title="LinkedIn"
      >
        <Icon name="simple-icons:linkedin" size={20} />
      </a>
      <a
        href="https://github.com/jntellez"
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="GitHub"
        title="GitHub"
      >
        <Icon name="simple-icons:github" size={20} />
      </a>
      <a
        href="/en/"
        class="w-10 h-10 flex items-center justify-center hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black"
        aria-label="Cambiar a Inglés"
        title={t["nav.lang"]}
      >
        <Icon name="lucide:globe" size={20} />
      </a>
      <ThemeToggle />
    </div>
  </header>

  <main class="space-y-16 mt-10">
    <section class="space-y-4">
      <p class="text-lg md:text-base leading-7">
        {t["hero.title"]}
      </p>
    </section>

    <section>
      <h3
        class="text-3xl font-serif font-medium italic border-b border-black dark:border-white mb-6 pb-2"
      >
        {t["projects.title"]}
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          projects.map((project) => (
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="border border-black dark:border-white p-6 flex flex-col justify-between hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors group cursor-pointer"
            >
              <div class="mb-1">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <h4 class="text-2xl font-serif font-semibold italic">
                      {project.name}
                    </h4>
                    <Icon name="lucide:arrow-up-right" size={15} />
                  </div>
                  <Icon
                    name="simple-icons:github"
                    size={20}
                    class="opacity-0 group-hover:opacity-100 transition-opacity"
                  />
                </div>
                <p class="mt-2 text-sm">{project.description}</p>
                <p class="mt-3.5 italic font-serif font-semibold text-sm">
                  {project.tecnologies}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <section>
      <h3 class="text-3xl font-serif mb-4">
        {t["stack.title"]}
      </h3>
      <p class="font-sans text-lg">
        {t["stack.items"]}
      </p>
    </section>
  </main>
</Layout>
